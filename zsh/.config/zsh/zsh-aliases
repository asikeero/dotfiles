# aliases for zsh

alias ll="ls -al --color"
alias ls="ls --color"
alias rm="rm -I"

alias python="python3"
alias nvim="~/.local/bin/nvim.appimage"

# xclip copy and paste
alias copy="xclip -selection c"
alias paste="xclip -selection c -o"

alias gs="git status"

# git add, commit and push
git_acp(){
    git add .
    git commit -m $1
    git push
}


